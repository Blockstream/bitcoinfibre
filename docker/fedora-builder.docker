FROM fedora:33

# Add blockstream/satellite copr repo to fetch libdb4
RUN dnf install -y dnf-plugins-core
RUN dnf copr enable -y blockstream/satellite

RUN dnf install -y \
	autoconf \
	automake \
	boost-devel \
	gcc \
	gcc-c++ \
	git \
	libdb4-cxx-devel \
	libdb4-devel \
	libevent-devel \
	libtool \
	make \
	miniupnpc-devel \
	python3 \
	qrencode-devel \
	qt5-qtbase-devel \
	qt5-qttools-devel \
	sqlite-devel \
	zeromq-devel
